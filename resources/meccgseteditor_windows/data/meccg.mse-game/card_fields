card field:
	type: text
	name: random
	description: Random value
	script: random_int(begin:1, end:7) + random_int(begin:1, end:7)
card field:
	type: text
	name: set
	description: Set
	#default: "k"
	script: if set.symbol != "" then set.symbol else "k"
card field:
	type: text
	name: copyright
	description: Copyright
	script: if set.copyright != "" then set.copyright else ""
