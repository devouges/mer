	type: text
	name: prowess
	description: Prowess
card field:
	type: text
	name: body
	description: Body
card field:
	type: text
	name: pb
	save value: false
	script:
		combined_editor(
			field1: card.prowess,
			separator: "/",
			field2: card.body,
			soft_before_empty: true,
			hide_when_empty:	 true
		)
	card list visible: false
	description: Prowess/Body
	show statistics: false
