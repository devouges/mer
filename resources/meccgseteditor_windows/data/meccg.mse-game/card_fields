	type: text
	name: site type
	description: Site type
	#script: sites_only(value)
	#script: "<sym>"+card.site_type+"</sym>"
card field:
	type: text
	name: site path
	multi line: true
	description: Site path
	#script : "<sym>"+card.site_path+"</sym>"
card field:
	type: text
	name: draw
	script: numbers_only(value)
	description: Draw
card field:
	type: text
	name: draw opp
	script: numbers_only(value)
	description: Opponent Draw
#######################Site Card Main Text Box
card field:
	type: text
	name: haven
	multi line: true
	default: "<b><i>Nearest Haven:</i></b> "
	script: site_text_filter(value)
	description: Nearest haven
card field:
	type: text
	name: site playable
	multi line: true
	default: "<b><i>Playable:</i></b> "
	script: site_text_filter(value)
	description: Playable
card field:
	type: text
	name: auto attack
	multi line: true
	default: "<b><i>Automatic-attacks:</i></b> "
	script: site_text_filter(value)
	description: Automatic-attacks
card field:
	type: text
	name: special
	multi line: true
	default: "<b><i>Special:</i></b> "
	script: site_text_filter(value)
	description: Special
card field:
	type: text
	name: site text
	show statistics: false
	save value: false
	multi line: true
	script: combined_editor( field1: card.haven, separator1: "<line>\n</line>", field2: card.site_playable, separator2: "<line>\n</line>", field3: card.auto_attack, separator3: "<line>\n</line>", field4: card.special )
	description: Text
