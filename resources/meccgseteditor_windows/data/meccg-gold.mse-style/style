############################################################## Extra card fields for Numbering
extra card field:
	type: text
	name: card code
	save value: false
	script:
		if set.automatic_card_numbers then
			forward_editor(prefix: card_number_m15() + "/" + card_count_m15(), field: card.card_code_text)
#		else
#			combined_editor(field1: card.custom_card_number, field2: card.card_code_text)
extra card style:
	card code:
		left: { if is_regionvertical() then 100 else if is_regionhorizontal() then 600 else 550 }
		top: { if is_site() then 980 else if is_regionvertical() then 140 else if is_regionhorizontal() then 400 else 994 }
		width: 70
		height: 22
		z index: 1
		visible: { if set.automatic_card_numbers then "yes" }
		angle: { if is_regionhorizontal() then -90 else 0 }
		alignment: left
		font:
			name: Arial
			#color: { if is_hero() then rgb(0,0,0) else rgb(255,255,255) }
			color: { if is_region() then rgb(0,0,0) else rgb(255,255,255) }
			weight: bold
			size: 13
			scale down to: 6
			shadow color: { if is_region() then rgb(255,255,255) else rgb(0,0,0) }
			shadow displacement x: 1
			shadow displacement y: 1